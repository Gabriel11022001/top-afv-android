<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@drawable/fundo_item_lista"
    android:layout_margin="7dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txt_contato_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cor_primaria"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_contato_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cor_primaria"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_contato_descricao"
        app:layout_constraintTop_toBottomOf="@id/txt_contato_descricao"
        android:layout_marginTop="7dp" />

    <ImageButton
        android:id="@+id/btn_deletar_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_deletar_adapter"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_editar_contato"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/btn_editar_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_editar_adapter"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_deletar_contato"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>