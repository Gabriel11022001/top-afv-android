<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ic_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_erro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/alerta_erro_mensagem"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/alerta_erro_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:text="Ocorreu um erro"
        app:layout_constraintStart_toEndOf="@id/ic_erro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_erro"
        app:layout_constraintBottom_toBottomOf="@id/ic_erro" />

</androidx.constraintlayout.widget.ConstraintLayout>