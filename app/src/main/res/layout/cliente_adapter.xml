<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:background="@drawable/fundo_item_lista"
    android:layout_margin="7dp"
    android:elevation="2dp" >

    <ImageView
        android:id="@+id/img_cliente_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cliente_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txt_nome_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gabriel Rodrigues dos Santos"
        android:textColor="@color/cor_primaria"
        app:layout_constraintStart_toEndOf="@id/img_cliente_item"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/txt_cpf_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123.456.789-00"
        android:textColor="@color/cor_primaria"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_nome_cliente"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_cliente" />

    <ImageView
        android:id="@+id/img_seta_proximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_seta_proximo_item_lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>